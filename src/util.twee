:: StoryInit

<<set $win7 to "Windows 7/8">>
<<set $win10 to "Windows 10">>
<<set $macos to "OS X">>
<<set $linux to "Linux">>
<<set $android to "Android">>
<<set $ios to "iOS">>
<<set $chromeos to "ChromeOS">>
<<set $otheros to "Other (Not Listed)">>
<<set $opsys to $otheros>>

<<switch platform.os.family>>
<<case "Windows">>
<<switch platform.os.version>>
<<case "10">>
<<set $opsys to $win10>>
<<default>>
<<set $opsys to $win7>>
<</switch>>
<<default>>
<<set $opsys to platform.os.family>>
<</switch>>

<<set $hostaddr to "wss://localhost:12345/buttplug">>
<<set $scaneventinitialized to false>>

:: StoryMenu

